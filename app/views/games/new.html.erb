<div class="container mt-5">
<h1>New game</h1><BR>

  <h4>These are your letters:</h4>
  <% @letters.each do |letter| %>
  <p class="badge bg-primary mx-1"><%= letter.capitalize %></p>
  <% end %><BR>


<form action="/score" method="post" data-turbo="false" class="form-group">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="longestWord1">What is the longest word you can find?</label>
  <input type="text" name="word" id="longestWord1" placeholder="Type your word here">
  <%= hidden_field_tag 'randomletters', @letters %>
  <input type="submit" class="btn btn-primary">
</form>
</div>
